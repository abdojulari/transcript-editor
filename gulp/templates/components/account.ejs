<% if (signedIn) { %>

  <div class="select">
    <div class="select-active" title="Signed in as <%= user.name %>"><span class="score<%= score > 0 ? ' active':'' %>"><%= UTIL.formatNumberTiny(score) %></span> <%= user.name %></div>
    <div class="select-options account-menu menu" role="menu" aria-hidden="true" aria-label="User account menu">
      <a href="/dashboard" class="select-option menu-item" role="menuitem">Dashboard</a>
      <% if (user.user_role_id > 1) { %>
        <a href="/admin" class="select-option menu-item" role="menuitem">Admin</a>
      <% } %>
      <a class="select-option menu-item" rel="nofollow" data-method="delete" href="/auth/sign_out">Sign out</a>
    </div>
  </div>

<% } else { %>

  <div class="select">
    <div class="select-active"><span class="score<%= score > 0 ? ' active':'' %>"><%= UTIL.formatNumberTiny(score) %></span> <span id="sign-in-label" class="sign-in-copy">Track My Progress</span></div>
    <div class="select-options account-menu menu" role="menu" aria-hidden="true" aria-labelledby="sign-in-label">
      <% _.each(project.authProviders, function(provider) { %>
        <a href="<%= provider.path %>" data-provider="<%= provider.name %>" class="select-option menu-item" data-active="Signing In..." role="menuitem">Sign in w/ <%= provider.label %></a>
      <% }) %>
    </div>
  </div>

<% } %>
