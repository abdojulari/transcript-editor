<% content_for :javascripts do %>
  <%= javascript_include_tag 'summary' %>
<% end %>
<%= render partial: 'layouts/admin_side_pane' %>
<h3>Summary of Completion percentages</h3>
<div class="card">
  <div class="card-header">
    <form>
      <p>
        <label for="institution">Institution:</label>
        <%= collection_select(:institution, :id, @institutions,
                              :id, :name,
                              { include_blank: 'All Institutions' },
                              { aria: { controls: 'summary-stats' }}) %>
      </p>
      <span id="collection">
        <%= render "collection",
                   collection: @collection,
                   selected_collection_id: @selected_collection_id,
                   aria: { controls: 'summary-stats' } %>
      </span>
    </form>
  </div>
  <div class="card-body" id="summary-stats" aria-busy="false"></div>
</div>
