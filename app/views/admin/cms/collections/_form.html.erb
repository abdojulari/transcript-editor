<%= form_for [:admin, :cms, @collection], html: { multipart: true } do |f| %>
  <%= render partial: "admin/cms/shared/errors",
             locals: { resource: @collection }
   %>

  <div class="form-group">
    <%= f.label :uid %>
    <%= f.text_field :uid, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :library_catalogue_title %>
    <%= f.text_field :library_catalogue_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: "5" %>
  </div>

  <div class="form-group">
    <%= f.label :url, "Catalogue Url" %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :vendor_id %>
    <%= f.select :vendor_id, Vendor.pluck(:name, :id), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :institution_id %>
    <%= f.collection_select(:institution_id, @institutions, :id, :name, { selected: @collection.institution_id }, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label 'themes' %>
    <%= f.collection_select(:theme_ids, @themes, :name, :name, { selected: @collection.theme_list }, { multiple: true,  class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Default Collection Image" %>

    <div class="form-control">
      <% if @collection.image.present? %>
        <%= image_tag(@collection.image_url(:thumb)) %>
      <% end %>

      <%= f.file_field :image, class: "align-bottom" %>
    </div>
  </div>

  <div class="form-group text-center">
    <%= f.submit %>
    <%= link_to "Cancel", :back, class: "button" %>
  </div>
<% end %>
