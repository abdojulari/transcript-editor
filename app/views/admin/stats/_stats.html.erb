<h2>Site wide statistics</h2>
<% stats.each do |key, value| %>
<div class="card mb-2">
  <div class="card-header">
    <p><%= display_name key %></p>
  </div>
  <div class="card-body">
    <div class="sums">
      <%= render "stat_list", value: value  %>
    </div>
  </div>
</div>
<br />
<% end %>


