<%= render partial: 'layouts/admin_side_pane' %>

<h1>Institutions</h1>
<% if policy(Institution).new? %>
  <%= link_to 'New Institution', new_admin_institution_path, class: 'btn btn-primary' %>
<% end %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Slug</th>
      <th scope="col">URL</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.slug %></td>
        <td><%= institution.url %></td>
        <td>
          <%= link_to admin_institution_transcription_conventions_path(institution)  do %>
            <%= fa_icon "list" %>
          <% end %>
        </td>

        <td>
          <%= link_to edit_admin_institution_path(institution)  do %>
            <%= fa_icon "edit" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

