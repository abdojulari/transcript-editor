<%= render partial: 'layouts/admin_side_pane' %>

<h1>Pages</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Type</th>
      <th colspan="2" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.page_type %></td>
        <td>
          <%= link_to admin_page_path(page)  do %>
            <%= fa_icon "eye" %>
          <% end %>
        </td>

        <td>
          <%= link_to edit_admin_page_path(page)  do %>
            <%= fa_icon "edit" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

