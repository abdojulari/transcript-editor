<%= render partial: 'layouts/admin_side_pane' %>

<h1>Pages</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Type</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.page_type.capitalize %></td>
        <td>
          <%= link_to "/page/preview/#{page.page_type}", target: :blank do %>
            <%= fa_icon "eye" %>
          <% end %>
        </td>

        <td>
          <%= link_to edit_admin_page_path(page)  do %>
            <%= fa_icon "edit" %>
          <% end %>
        </td>
        <td>
          <%= button_to admin_page_path(page), data: {confirm: 'Are you sure you want to delete this page? This action cannot be undone.'}, method: :delete do %>
            <%= fa_icon "trash" %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Page', new_admin_page_path, class: 'btn btn-primary' %>


