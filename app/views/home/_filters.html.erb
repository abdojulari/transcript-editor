<%= form_tag root_path, method: :get, class: 'home-form' do %>
  <div id="filters">
    <section class="filter_bar">
      <article class="filter_bar__content">
        <div class="transcripts-wrapper" role="main">
          <div data-sticky="#transcript-facets" class="sticky-on-scroll" id="fixedHeader">
            <div id="transcript-facets" class="filter_bar__form transcript-facets filter_bar">
              <div class="filter_bar__fieldset">
                <legend class="desktop-only">
                  Filter by:
                </legend>

                <% if show_theme? %>
                  <div class="facet" id="theme_search">
                    <%= render partial: 'home/themes', locals: { themes: @themes } %>
                  </div>
                <% end %>

                <% if show_institutions? %>
                  <div class="facet" id="institution_search">
                    <%= render partial: 'home/institutions', locals: { institutions: @institutions, selected_id: @selected_institution_id.to_i } %>
                  </div>
                <% end %>

                <div class="facet">
                  <div id="collection_search">
                    <%= render partial: 'home/collection', locals: { collection: @collection } %>
                  </div>
                </div>

                <div class="facet">
                  <div class="search_field">
                    <%= text_field_tag "data[text]", params.dig(:data, :text), placeholder: "Search title/description" %>
                  </div>
                </div>
              </div>

              <div class="filter_bar__fieldset">
                <legend class="desktop-only">
                  Sort by:
                </legend>
                <div class="facet">
                  <%= select_tag "data[sort_id]", options_from_collection_for_select(@sort_list, "id", "title", params.dig(:data, :sort_id)), prompt: "Random" %>
                </div>
                <div class="search_field">
                  <%= submit_tag "Apply filters", class: "button icon search", id: "filters-submit" %>
                </div>

                <div>
                  <%= link_to root_path, id: 'reset'  do %>
                    <%= fa_icon "refresh" %>
                    Reset
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>
    </section>
  </div>
<% end %>
