<% if collection.any? %>
  <%= select_tag "data[collection_id][]", options_from_collection_for_select(collection, "id", "title", selected_id), multiple: true %>
<% else %>
  No collection found
<% end %>


<script type="text/javascript">
  $(document).ready(function() {
    $('select#data_collection_id_').change(function() {
        var size = $(this).find('option:selected').size();
        $('#collection-filter').text("Collections (" + size + ")");
    });
  })
</script>