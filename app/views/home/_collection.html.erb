<% if collection.any? %>
  <div class="checkbox-list" id="data_collection_id_">
    <%= collection_check_boxes('data', 'collection_id', collection, "id", "title", include_hidden: false) do |b| %>
      <div class="option">
        <%= b.check_box(checked: should_be_checked?(b)) %> <%= b.label %> <br>
      </div>
    <% end %>
  </div>
<% else %>
  No collection found
<% end %>


<script type="text/javascript">
  $(document).ready(function() {
    $('#data_collection_id_').change(function() {
      var size = $(this).find('input[type=checkbox]:checked').size();
      $('#collection-filter').text("Collections (" + size + ")");
    });
  })
</script>